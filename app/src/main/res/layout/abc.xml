<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/margin_150dp"
        android:layout_height="@dimen/margin_200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/bg_square_green"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_photo_gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_2dp"
            android:scaleType="fitXY"
            android:src="@drawable/image_placeholder_compare" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/margin_2dp"
            android:background="@drawable/bg_square_transparent"
            android:gravity="bottom"
            android:orientation="vertical">

            <com.fittrack.View.RegularFontTextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="@dimen/margin_5dp"
                android:text=""
                android:textColor="@color/color_border_black"
                android:textSize="@dimen/font_14sp" />

            <com.fittrack.View.RegularFontTextView
                android:id="@+id/tv_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="@dimen/margin_3dp"
                android:text=""
                android:textColor="@color/color_dark_blue"
                android:textSize="@dimen/font_12sp" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>