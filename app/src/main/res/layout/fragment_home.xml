<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_new_login">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/header_layout" />

        <include layout="@layout/progressbar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_header"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_header"
                android:layout_marginTop="@dimen/margin_10dp"
                android:fitsSystemWindows="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_home_screen"
                    android:orientation="vertical">

                    <com.fittrack.View.RegularFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:padding="@dimen/margin_10dp"
                        android:text="@string/text_FitTrack_is"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:layout_marginLeft="@dimen/margin_60dp"
                        android:layout_marginRight="@dimen/margin_7dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@color/color_white" />

                    <com.fittrack.View.RegularFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:padding="@dimen/margin_10dp"
                        android:text="@string/text_FitTrack_has"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:layout_marginLeft="@dimen/margin_60dp"
                        android:layout_marginRight="@dimen/margin_7dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@color/color_white" />

                    <com.fittrack.View.RegularFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:padding="@dimen/margin_10dp"
                        android:text="@string/text_by_knowing_bmi"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:layout_marginLeft="@dimen/margin_60dp"
                        android:layout_marginRight="@dimen/margin_7dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@color/color_white" />

                    <com.fittrack.View.RegularFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:padding="@dimen/margin_10dp"
                        android:text="@string/text_by_knowing_bmr"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:layout_marginLeft="@dimen/margin_60dp"
                        android:layout_marginRight="@dimen/margin_7dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@color/color_white" />

                    <com.fittrack.View.RegularFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:padding="@dimen/margin_10dp"
                        android:text="@string/text_you_add_weight"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:layout_marginLeft="@dimen/margin_60dp"
                        android:layout_marginRight="@dimen/margin_7dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@color/color_white" />

                    <com.fittrack.View.RegularFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:padding="@dimen/margin_10dp"
                        android:text="@string/text_you_add_question"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:layout_marginLeft="@dimen/margin_60dp"
                        android:layout_marginRight="@dimen/margin_7dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@color/color_white" />

                    <com.fittrack.View.RegularFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:padding="@dimen/margin_10dp"
                        android:text="@string/text_send_us"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_16sp" />


                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">


                <include
                    layout="@layout/ads_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_add_forum"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
