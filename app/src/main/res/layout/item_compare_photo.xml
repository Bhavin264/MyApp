<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_compare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/bg_round_white"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_photo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_placeholder_compare" />

            <com.fittrack.View.RegularFontTextView
                android:id="@+id/tv_date1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="09-07-2017"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_13sp" />

            <com.fittrack.View.RegularFontTextView
                android:id="@+id/tv_weight1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="50 kg"
                android:textColor="@color/color_red"
                android:textSize="@dimen/font_14sp" />


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:src="@drawable/ic_compair_photo"
            android:layout_marginTop="@dimen/margin_70dp"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_marginRight="@dimen/margin_2dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/margin_5dp">

            <ImageView
                android:id="@+id/img_photo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_placeholder_compare" />

            <com.fittrack.View.RegularFontTextView
                android:id="@+id/tv_date2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="09-07-2017"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_13sp" />

            <com.fittrack.View.RegularFontTextView
                android:id="@+id/tv_weight2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="50 kg"
                android:textColor="@color/color_red"
                android:textSize="@dimen/font_14sp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>