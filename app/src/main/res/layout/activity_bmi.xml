                            android:layout_height="match_parent"
                            android:background="@color/color_grey" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:background="@color/color_pink">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2">

                                <com.fittrack.View.RegularFontTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:paddingBottom="@dimen/margin_5dp"
                                    android:paddingLeft="@dimen/margin_10dp"
                                    android:paddingRight="@dimen/margin_10dp"
                                    android:paddingTop="@dimen/margin_5dp"
                                    android:text="@string/text_obese"
                                    android:textAllCaps="true"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/font_12sp" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginBottom="-1dp"
                                    android:layout_marginTop="-1dp"
                                    android:src="@drawable/indicator_arrow_bmi"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_80dp"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/margin_80dp"
                            android:layout_height="@dimen/margin_80dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/half_round_bmi_result" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_80dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.fittrack.View.RegularFontTextView
                                android:id="@+id/tv_bmi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/margin_5dp"
                                android:gravity="center"
                                android:text="@string/text_bmi"
                                android:textColor="@color/color_red"
                                android:textSize="@dimen/font_12sp" />


                            <com.fittrack.View.RegularFontTextView
                                android:id="@+id/tv_bmi_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_bmi"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="0.0"
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/font_14sp" />

                            <View
                                android:layout_width="@dimen/margin_40dp"
                                android:layout_height="@dimen/margin_2dp"
                                android:layout_marginLeft="@dimen/margin_10dp"
                                android:layout_marginRight="@dimen/margin_10dp"
                                android:layout_marginTop="@dimen/margin_2dp"
                                android:background="@drawable/bg_round_red" />


                            <com.fittrack.View.RegularFontTextView
                                android:id="@+id/tv_bmi_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_bmi_value"
