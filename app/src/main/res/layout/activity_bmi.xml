<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_new_login"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header_layout" />

            <include layout="@layout/progressbar" />

        </LinearLayout>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_header"
            android:layout_marginBottom="@dimen/margin_40dp"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:background="@drawable/bg_bmi_calculate"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:orientation="vertical">

                        <com.fittrack.View.RegularFontEditText
                            android:id="@+id/et_age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_round_white"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:hint="@string/text_age"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:padding="@dimen/margin_10dp"
                            android:paddingLeft="@dimen/margin_10dp"
                            android:paddingRight="@dimen/margin_10dp"
                            android:textColor="@color/color_grey"
                            android:textColorHint="@color/color_grey"
                            android:textSize="@dimen/font_12sp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:orientation="horizontal">

                            <com.fittrack.View.RegularFontEditText
                                android:id="@+id/et_weight"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_5dp"
                                android:layout_weight="0.8"
                                android:background="@drawable/bg_round_white"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:hint="@string/text_weight"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:padding="@dimen/margin_10dp"
                                android:textColor="@color/color_black"
                                android:textColorHint="@color/color_black"
                                android:textSize="@dimen/font_12sp" />

                            <com.fittrack.View.RegularFontTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/margin_5dp"
                                android:layout_weight="0.2"
                                android:background="@drawable/btn_kg_small_gradiant"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:inputType="text"
                                android:maxLines="1"
                                android:padding="@dimen/margin_10dp"
                                android:text="@string/text_kg"
                                android:textColor="@color/color_white"
                                android:textColorHint="@color/color_grey"
                                android:textSize="@dimen/font_12sp" />


                        </LinearLayout>


                        <com.fittrack.View.RegularFontEditText
                            android:id="@+id/et_height"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_20dp"
                            android:background="@drawable/bg_round_white"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:hint="@string/text_height_cm"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:padding="@dimen/margin_10dp"
                            android:textColor="@color/color_black"
                            android:textColorHint="@color/color_black"
                            android:textSize="@dimen/font_12sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">


                    <com.fittrack.View.RegularFontTextView
                        android:id="@+id/tv_reset"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_reset_bmi"
                        android:gravity="center"
                        android:padding="@dimen/margin_10dp"
                        android:text="@string/text_reset"
                        android:textAllCaps="false"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_14sp" />


                    <com.fittrack.View.RegularFontTextView
                        android:id="@+id/tv_calculate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_reset_bmi"
                        android:gravity="center"
                        android:padding="@dimen/margin_10dp"
                        android:text="@string/text_calculate"
                        android:textAllCaps="false"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:background="@color/color_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <com.fittrack.View.RegularFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/margin_3dp"
                            android:text="@string/text_underweight"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/font_12sp" />

                        <View
                            android:layout_width="@dimen/margin_30dp"
                            android:layout_height="@dimen/margin_3dp"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:layout_marginRight="@dimen/margin_10dp"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:background="@drawable/bg_round_red" />

                        <com.fittrack.View.BoldFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:gravity="center"
                            android:text="@string/text_16"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/font_14sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/margin_1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_grey" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <com.fittrack.View.RegularFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/margin_3dp"
                            android:text="@string/text_normal"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/font_12sp" />

                        <View
                            android:layout_width="@dimen/margin_30dp"
                            android:layout_height="@dimen/margin_3dp"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:layout_marginRight="@dimen/margin_10dp"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:background="@drawable/bg_round_red" />

                        <com.fittrack.View.BoldFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:gravity="center"
                            android:text="@string/text_16_18"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/font_14sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/margin_1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_grey" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.fittrack.View.RegularFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/margin_3dp"
                            android:text="@string/text_overweight"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/font_12sp" />

                        <View
                            android:layout_width="@dimen/margin_30dp"
                            android:layout_height="@dimen/margin_3dp"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:layout_marginRight="@dimen/margin_10dp"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:background="@drawable/bg_round_red" />

                        <com.fittrack.View.BoldFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:gravity="center"
                            android:text="@string/text_18_25"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/font_14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/margin_1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_grey" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.fittrack.View.RegularFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/margin_3dp"
                            android:text="@string/text_obese"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/font_12sp" />

                        <View
                            android:layout_width="@dimen/margin_30dp"
                            android:layout_height="@dimen/margin_3dp"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:layout_marginRight="@dimen/margin_10dp"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:background="@drawable/bg_round_red" />

                        <com.fittrack.View.BoldFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:gravity="center"
                            android:text="@string/text_30"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/font_14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_7dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img_underweight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/indicator_arrow_bmi"
                            android:visibility="gone" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/margin_1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_grey" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_normal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/indicator_arrow_bmi"
                            android:visibility="gone" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/margin_1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_grey" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_overweight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/indicator_arrow_bmi"
                            android:visibility="gone" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/margin_1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_grey" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_obese"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/indicator_arrow_bmi"
                            android:visibility="gone" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/margin_1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_grey" />F

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1dp"
                    android:background="@color/color_grey" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:background="@drawable/bg_square_black"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_1dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="0.8">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"

                            android:background="@color/color_yellow">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2">

                                <com.fittrack.View.RegularFontTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_weight="0.2"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:paddingBottom="@dimen/margin_5dp"
                                    android:paddingLeft="@dimen/margin_10dp"
                                    android:paddingRight="@dimen/margin_10dp"
                                    android:paddingTop="@dimen/margin_5dp"
                                    android:text="@string/text_underweight"
                                    android:textAllCaps="true"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/font_12sp" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginBottom="-1dp"
                                    android:layout_marginTop="-1dp"
                                    android:src="@drawable/indicator_arrow_bmi"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </LinearLayout>


                        <View
                            android:layout_width="@dimen/margin_1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_grey" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:background="@color/color_light_green">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2">

                                <com.fittrack.View.RegularFontTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:paddingBottom="@dimen/margin_5dp"
                                    android:paddingLeft="@dimen/margin_10dp"
                                    android:paddingRight="@dimen/margin_10dp"
                                    android:paddingTop="@dimen/margin_5dp"
                                    android:text="@string/text_normal"
                                    android:textAllCaps="true"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/font_12sp" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginBottom="-1dp"
                                    android:layout_marginTop="-1dp"
                                    android:src="@drawable/indicator_arrow_bmi"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/margin_1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_grey" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:background="@color/color_light_orange">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2">

                                <com.fittrack.View.RegularFontTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:paddingBottom="@dimen/margin_5dp"
                                    android:paddingLeft="@dimen/margin_10dp"
                                    android:paddingRight="@dimen/margin_10dp"
                                    android:paddingTop="@dimen/margin_5dp"
                                    android:text="@string/text_overweight"
                                    android:textAllCaps="true"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/font_12sp" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginBottom="-1dp"
                                    android:layout_marginTop="-1dp"
                                    android:src="@drawable/indicator_arrow_bmi"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </LinearLayout>

                        <View
