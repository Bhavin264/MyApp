<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popup_bmr"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_weight="0.3"
        android:gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.fittrack.View.RegularFontTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="@string/text_what_bmr"
                android:textColor="@color/color_border_black"
                android:textSize="@dimen/font_20sp" />

            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_15dp"
                android:padding="@dimen/margin_5dp"
                android:src="@drawable/ic_close_popup_gray" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dp"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_marginRight="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@color/color_grey" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_weight="0.75"
        android:gravity="center"
        android:orientation="vertical">

        <com.fittrack.View.RegularFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:lineSpacingExtra="@dimen/margin_5dp"
            android:text="@string/text_bmi_info"
            android:textColor="@color/color_border_black"
            android:textSize="@dimen/font_16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_continue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_6dp"
            android:background="@drawable/btn_gradiant_popup"
            android:gravity="center"
            android:orientation="horizontal">


            <com.fittrack.View.RegularFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:gravity="center"
                android:text="@string/text_continue"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_20sp"
                android:drawableRight="@drawable/ic_continue_white_popup_btn"
                android:drawablePadding="@dimen/margin_10dp"
                android:padding="@dimen/margin_10dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>


