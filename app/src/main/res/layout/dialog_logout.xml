<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_weight="0.2"
        android:gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.fittrack.View.RegularFontTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="@string/app_name"
                android:textColor="@color/color_red"
                android:textSize="@dimen/font_20sp" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/margin_15dp"
                android:padding="@dimen/margin_5dp"
                android:src="@drawable/ic_close_popup_gray" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dp"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_marginRight="@dimen/margin_8dp"
            android:background="@color/color_grey" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="vertical">

        <com.fittrack.View.RegularFontTextView
            android:id="@+id/tv_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_5dp"
            android:textColor="@color/color_black"
            android:textSize="@dimen/font_16sp"
            android:text=""
            android:layout_margin="@dimen/margin_10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_weight="0.6"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.fittrack.View.BoldFontTextView
                android:id="@+id/tv_yes"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_5dp"
                android:background="@drawable/btn_reset_bmi"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_10dp"
                android:paddingLeft="@dimen/margin_35dp"
                android:paddingRight="@dimen/margin_35dp"
                android:paddingTop="@dimen/margin_10dp"
                android:text="@string/text_yes"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_16sp" />

            <com.fittrack.View.BoldFontTextView
                android:id="@+id/tv_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_reset_bmi"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_10dp"
                android:paddingLeft="@dimen/margin_35dp"
                android:paddingRight="@dimen/margin_35dp"
                android:paddingTop="@dimen/margin_10dp"
                android:text="@string/text_no"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_16sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>


