<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_5dp">

        <com.fittrack.Utility.CircleImageView.CircleImageView
            android:id="@+id/img_Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_placeholder_small"
            app:civ_border_color="@color/color_white"
            app:civ_border_width="@dimen/margin_1dp" />

        <com.fittrack.View.RegularFontTextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/img_Profile"
            android:text="dsfd"
            android:textColor="@color/color_black"
            android:textSize="@dimen/font_16sp" />

        <com.fittrack.View.RegularFontTextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/margin_10dp"
            android:text="fdd"
            android:textColor="@color/color_grey"
            android:textSize="@dimen/font_12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.fittrack.View.RegularFontTextView
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_60dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:text="fddsf"
            android:textColor="@color/color_grey"
            android:textSize="@dimen/font_14sp" />

    </LinearLayout>

</LinearLayout>