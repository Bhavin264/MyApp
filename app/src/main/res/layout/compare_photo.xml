<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.fittrack.View.RegularFontTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="@string/text_add_image"
                android:textColor="@color/color_red"
                android:textSize="@dimen/font_20sp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_15dp"
                android:padding="@dimen/margin_5dp"
                android:src="@drawable/ic_close_popup_gray"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@color/color_grey" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_add_popup" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_add_popup" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.fittrack.View.RegularFontTextView
                android:id="@+id/tv_d1"
                android:layout_width="@dimen/margin_140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5dp"
                android:background="@drawable/bg_round_corner_blue"
                android:drawableLeft="@drawable/ic_birthdate_gray_register_screen"
                android:drawablePadding="@dimen/margin_10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/text_date"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="@dimen/margin_5dp"
                android:textColor="@color/color_grey"
                android:textColorHint="@color/color_grey"
                android:textSize="@dimen/font_12sp" />

            <com.fittrack.View.RegularFontTextView
                android:id="@+id/tv_d2"
                android:layout_width="@dimen/margin_140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_2dp"
                android:background="@drawable/bg_round_corner_blue"
                android:drawableLeft="@drawable/ic_birthdate_gray_register_screen"
                android:drawablePadding="@dimen/margin_10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/text_date"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="@dimen/margin_5dp"
                android:textColor="@color/color_grey"
                android:textColorHint="@color/color_grey"
                android:textSize="@dimen/font_12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.fittrack.View.RegularFontEditText
                android:id="@+id/et_w1"
                android:layout_width="@dimen/margin_140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/bg_round_corner_blue"
                android:drawableLeft="@drawable/ic_weight_gray_register_screen"
                android:drawablePadding="@dimen/margin_10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/text_weight"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:padding="@dimen/margin_5dp"
                android:textColor="@color/color_grey"
                android:textColorHint="@color/color_grey"
                android:textSize="@dimen/font_12sp" />

            <com.fittrack.View.RegularFontEditText
                android:id="@+id/et_w2"
                android:layout_width="@dimen/margin_140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_2dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/bg_round_corner_blue"
                android:drawableLeft="@drawable/ic_weight_gray_register_screen"
                android:drawablePadding="@dimen/margin_10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/text_weight"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:padding="@dimen/margin_5dp"
                android:textColor="@color/color_grey"
                android:textColorHint="@color/color_grey"
                android:textSize="@dimen/font_12sp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/btn_gradiant_popup"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="-3dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginRight="-2dp">

        <com.fittrack.View.RegularFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:gravity="center"
            android:text="@string/text_compare"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_16sp" />


    </LinearLayout>


</LinearLayout>